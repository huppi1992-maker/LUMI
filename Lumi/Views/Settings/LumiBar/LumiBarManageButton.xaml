<UserControl x:Class="Lumi.Views.Settings.LumiBar.LumiBarManageButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Links: Buttons -->
        <Border Grid.Column="0" CornerRadius="10" Background="#141414" Padding="10">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top"
                           Text="Lumi-Bar Buttons"
                           Foreground="#E8DCC3"
                           FontSize="14"
                           Margin="0,0,0,8"/>

                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="0,8,0,0">
                    <Button Style="{StaticResource LumiFormButton}" Content="Neu" Command="{Binding AddButtonCommand}" Margin="0,0,6,0"/>
                    <Button Style="{StaticResource LumiFormButton}" Content="Löschen" Command="{Binding RemoveSelectedCommand}" Cursor="Hand"/>
                </StackPanel>

                <ListBox ItemsSource="{Binding Buttons}"
                         SelectedItem="{Binding SelectedButton}"
                         Background="Transparent"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding Name}"
                                           Foreground="#E8DCC3"
                                           VerticalAlignment="Center"/>

                                <CheckBox Style="{StaticResource LumiCheckBox}"
                                          Grid.Column="1"
                                          IsChecked="{Binding IsEnabled}"
                                          VerticalAlignment="Center"
                                          Margin="10,0,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- Rechts: Editor -->
        <Border Grid.Column="2" CornerRadius="10" Background="#141414" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Button Settings"
                           Foreground="#E8DCC3"
                           FontSize="16"/>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Name (intern)" Foreground="#E8DCC3" VerticalAlignment="Center"/>
                    <TextBox  Style="{StaticResource LumiTextBox}" Grid.Row="0" Grid.Column="1" Text="{Binding SelectedButton.Name, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Label (optional)" Foreground="#E8DCC3" VerticalAlignment="Center" Margin="0,8,0,0"/>
                    <TextBox  Style="{StaticResource LumiTextBox}" Grid.Row="1" Grid.Column="1" Text="{Binding SelectedButton.Label, UpdateSourceTrigger=PropertyChanged}" Margin="0,8,0,0"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="IconKey" Foreground="#E8DCC3" VerticalAlignment="Center" Margin="0,8,0,0"/>
                    <TextBox  Style="{StaticResource LumiTextBox}" Grid.Row="3" Grid.Column="1" Text="{Binding SelectedButton.IconKey, UpdateSourceTrigger=PropertyChanged}" Margin="0,8,0,0"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="ActionId" Foreground="#E8DCC3" VerticalAlignment="Center" Margin="0,8,0,0"/>
                    <TextBox  Style="{StaticResource LumiTextBox}" Grid.Row="4" Grid.Column="1" Text="{Binding SelectedButton.ActionId, UpdateSourceTrigger=PropertyChanged}" Margin="0,8,0,0"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Fill (Hex)" Foreground="#E8DCC3" VerticalAlignment="Center" Margin="0,8,0,0"/>
                    <TextBox  Style="{StaticResource LumiTextBox}" Grid.Row="5" Grid.Column="1" Text="{Binding SelectedButton.FillHex, UpdateSourceTrigger=PropertyChanged}" Margin="0,8,0,0"/>

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Hover (Hex)" Foreground="#E8DCC3" VerticalAlignment="Center" Margin="0,8,0,0"/>
                    <TextBox  Style="{StaticResource LumiTextBox}" Grid.Row="6" Grid.Column="1" Text="{Binding SelectedButton.HoverHex, UpdateSourceTrigger=PropertyChanged}" Margin="0,8,0,0"/>

                    <TextBlock Grid.Row="7" Grid.Column="0" Text="Pressed (Hex)" Foreground="#E8DCC3" VerticalAlignment="Center" Margin="0,8,0,0"/>
                    <TextBox  Style="{StaticResource LumiTextBox}" Grid.Row="7" Grid.Column="1" Text="{Binding SelectedButton.PressedHex, UpdateSourceTrigger=PropertyChanged}" Margin="0,8,0,0"/>
                </Grid>

                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Style="{StaticResource LumiFormButton}" Content="Reload" Command="{Binding ReloadCommand}" Margin="0,0,6,0"/>
                    <Button Style="{StaticResource LumiFormButton}" Content="↑" Command="{Binding MoveUpCommand}" Margin="0,0,6,0" Cursor="Hand"/>
                    <Button Style="{StaticResource LumiFormButton}" Content="↓" Command="{Binding MoveDownCommand}" Margin="0,0,12,0"/>
                    <Button Style="{StaticResource LumiFormButtonPrimary}" Content="Speichern" Command="{Binding SaveCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
