<Window x:Class="Lumi.Views.LumiHub"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Lumi.Infrastructure"
        xmlns:vm="clr-namespace:Lumi.ViewModels"
        xmlns:views="clr-namespace:Lumi.Views"
        mc:Ignorable="d"
        Width="1280"
        Height="720"
        WindowStartupLocation="Manual"
        Title="LUMI Hub"
        ResizeMode="NoResize"
        ShowInTaskbar="True"
        Topmost="True"
        Background="#1E1E1E">

    <Border Background="#242525" BorderBrush="#3A3A3A" BorderThickness="1" CornerRadius="18">
        <Grid Margin="12" HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
                       Text="LUMI Hub"
                       Foreground="#E8DCC3"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="4,2,4,10"
                       VerticalAlignment="Center"/>

            <!-- Close (oben rechts) -->
            <Button Grid.Column="1"
                    Width="52" Height="52"
                    HorizontalAlignment="Right"
                    Margin="4,2,4,10"
                    Style="{StaticResource SquareButtonStyle_V2}"
                    local:IconButton.IconData="{StaticResource tdesign_close_circle}"
                    local:IconButton.IconFill="#C93A3A"
                    local:IconButton.IconFillHover="#E14B4B"
                    local:IconButton.IconFillPressed="#8F1D1D"
                    Click="Close_Click"/>

            <!-- Host: hier landet immer nur der aktuelle Screen -->
            <Border Grid.Row="1" Background="#1E1E1E" BorderBrush="#3A3A3A" BorderThickness="1" CornerRadius="18">
                <ContentControl Content="{Binding CurrentViewModel}"/>
            </Border>

            <!-- Footer Buttons -->
            <Grid Grid.Row="2" Margin="4,12,4,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Home (Beispiel links) -->
                <Button Grid.Column="0"
                        Width="52" Height="52"
                        HorizontalAlignment="Left"
                        Style="{StaticResource SquareButtonStyle_V2}"
                        Command="{Binding ShowHomeCommand}"
                        local:IconButton.IconData="{StaticResource tdesign_houses_2}"/>

                <!-- Settings -->
                <Button Grid.Column="1"
                        Width="52" Height="52"
                        Style="{StaticResource SquareButtonStyle_V2}"
                        Command="{Binding ShowSettingsCommand}"
                        local:IconButton.IconData="{StaticResource tdesign_setting_1_filled}"
                        local:IconButton.IconFill="#3A7BD5"
                        local:IconButton.IconFillHover="#4C8EE6"
                        local:IconButton.IconFillPressed="#2E5FA8"/>

                <!-- Off -->
                <Button Grid.Column="3"
                        Width="52" Height="52"
                        Style="{StaticResource SquareButtonStyle_V2}"
                        Command="{Binding ExitCommand}"
                        local:IconButton.IconData="{StaticResource tdesign_poweroff}"
                        local:IconButton.IconFill="#C93A3A"
                        local:IconButton.IconFillHover="#E14B4B"
                        local:IconButton.IconFillPressed="#8F1D1D"/>
            </Grid>
        </Grid>
    </Border>
</Window>
