<UserControl x:Class="Lumi.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="Transparent">

    <UserControl.Resources>
        <!-- Farben (angelehnt an deinen Style) -->
        
        <SolidColorBrush x:Key="TextBrush" Color="#E8DCC3"/>
        <SolidColorBrush x:Key="MutedTextBrush" Color="#B7AE9C"/>
        <SolidColorBrush x:Key="PanelBrush" Color="#242525"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="StrokeBrush" Color="#3A3A3A"/>
        <SolidColorBrush x:Key="HoverBrush" Color="#2D2D2D"/>

        <!-- Left Nav Button -->
        <Style x:Key="NavItemButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="{StaticResource HoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Expander Style (nur Optik, kein Overkill) -->
        <Style x:Key="NavExpanderStyle" TargetType="Expander">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Expander">
                        <Border BorderBrush="{StaticResource StrokeBrush}"
                                BorderThickness="1"
                                CornerRadius="14"
                                Background="{StaticResource PanelBrush}"
                                Padding="10">
                            <StackPanel>
                                <ToggleButton x:Name="HeaderSite"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                              Cursor="Hand"
                                              Focusable="False">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{TemplateBinding Header}"
                                                   FontWeight="SemiBold"
                                                   FontSize="13"
                                                   VerticalAlignment="Center"/>

                                        <TextBlock Grid.Column="1"
                                                   Text="▸"
                                                   Foreground="{StaticResource MutedTextBrush}"
                                                   FontSize="14"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </ToggleButton>

                                <ContentPresenter x:Name="ExpandSite"
                                                  Margin="0,8,0,0"
                                                  Visibility="Collapsed"/>
                            </StackPanel>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="True">
                                <Setter TargetName="ExpandSite" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="HeaderSite" Property="Opacity" Value="1"/>
                            </Trigger>

                            <!-- Pfeil drehen -->
                            <Trigger SourceName="HeaderSite" Property="ToggleButton.IsChecked" Value="True">
                                <Setter TargetName="HeaderSite" Property="Opacity" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT NAV -->
        <Border Grid.Column="0"
                Background="{StaticResource PanelBrush}"
                BorderBrush="{StaticResource StrokeBrush}"
                BorderThickness="1"
                CornerRadius="18"
                Padding="12"
                Margin="2">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="2,2,2,12">
                    <TextBlock Text="Einstellungen"
                               Foreground="{StaticResource TextBrush}"
                               FontSize="16"
                               FontWeight="Bold"/>
                    <TextBlock Text="Kategorien"
                               Foreground="{StaticResource MutedTextBrush}"
                               Opacity="0.8"
                               FontSize="12"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <ScrollViewer.Resources>
                        <Style TargetType="ScrollBar"
                               BasedOn="{StaticResource SlimVerticalScrollBar}"/>
                    </ScrollViewer.Resources>
                    <StackPanel>

                        <!-- Allgemein -->
                        <Expander Header="Allgemein"
                                  Style="{StaticResource NavExpanderStyle}"
                                  IsExpanded="True"
                                  Margin="0,0,0,10">
                            <StackPanel>
                                <Button Style="{StaticResource NavItemButtonStyle}"
                                        Command="{Binding ShowGeneralLanguageCommand}">
                                    <TextBlock Text="Sprache"
                                               Foreground="#E8DCC3"/>
                                </Button>


                                <Button Style="{StaticResource NavItemButtonStyle}"
                                        Command="{Binding ShowGeneralAppearanceCommand}">
                                    <TextBlock Text="Optik"
                                               Foreground="#E8DCC3"/>
                                </Button>


                                <Button Style="{StaticResource NavItemButtonStyle}">
                                    <TextBlock Text="Datenschutz" Foreground="{StaticResource TextBrush}" />
                                </Button>
                            </StackPanel>
                        </Expander>

                        <!-- Lumi-Hub -->
                        <Expander Header="Lumi-Hub"
                                  Style="{StaticResource NavExpanderStyle}"
                                  Margin="0,0,0,10">
                            <StackPanel>
                                <Button Style="{StaticResource NavItemButtonStyle}">
                                    <TextBlock Text="Buttons verwalten" Foreground="{StaticResource TextBrush}" />
                                </Button>

                                <Button Style="{StaticResource NavItemButtonStyle}">
                                    <TextBlock Text="Layout" Foreground="{StaticResource TextBrush}" />
                                </Button>
                            </StackPanel>
                        </Expander>

                        <!-- Lumi-Bar -->
                        <Expander Header="Lumi-Bar"
                                  Style="{StaticResource NavExpanderStyle}">
                            <StackPanel>
                                <Button Style="{StaticResource NavItemButtonStyle}">
                                    <TextBlock Text="Buttons verwalten" Foreground="{StaticResource TextBrush}" />
                                </Button>

                                <Button Style="{StaticResource NavItemButtonStyle}">
                                    <TextBlock Text="Verhalten" Foreground="{StaticResource TextBrush}" />
                                </Button>
                            </StackPanel>
                        </Expander>

                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- RIGHT CONTENT -->
        <Border Grid.Column="2"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource StrokeBrush}"
                BorderThickness="0"
                CornerRadius="18"
                Padding="2">

            <!-- Für den Anfang: einfacher ContentHost + Überschrift -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="PageTitle"
                           Text="Allgemein • Optik"
                           Foreground="{StaticResource TextBrush}"
                           FontSize="16"
                           FontWeight="Bold"/>

                <Border Grid.Row="2"
                        Background="#242525"
                        BorderBrush="{StaticResource StrokeBrush}"
                        BorderThickness="1"
                        CornerRadius="14"
                        Padding="5">
                    <ContentControl Content="{Binding CurrentSettingsViewModel}"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
