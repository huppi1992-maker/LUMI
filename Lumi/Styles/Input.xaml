<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:infra="clr-namespace:Lumi.Infrastructure">

    <!-- =========================
         Base Brushes / Metrics
         ========================= -->
    <Thickness x:Key="Input_Padding">10,7</Thickness>
    <CornerRadius x:Key="Input_CornerRadius">10</CornerRadius>
    <Thickness x:Key="Input_BorderThickness">1</Thickness>

    <SolidColorBrush x:Key="Input_Bg" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="Input_BgHover" Color="#232323"/>
    <SolidColorBrush x:Key="Input_BgFocus" Color="#262626"/>

    <SolidColorBrush x:Key="Input_Border" Color="#3A3A3A"/>
    <SolidColorBrush x:Key="Input_BorderHover" Color="#525252"/>
    <SolidColorBrush x:Key="Input_BorderFocus" Color="#4C8EE6"/>

    <SolidColorBrush x:Key="Input_Fg" Color="#E8DCC3"/>
    <SolidColorBrush x:Key="Input_FgDisabled" Color="#7A7A7A"/>

    <SolidColorBrush x:Key="Input_Placeholder" Color="#8A8A8A"/>
    <SolidColorBrush x:Key="Input_SelectionBg" Color="#4C8EE6"/>
    <SolidColorBrush x:Key="Input_SelectionFg" Color="#FFFFFF"/>

    <!-- =========================
         TextBox
         ========================= -->
    <Style x:Key="LumiTextBox" TargetType="{x:Type TextBox}">
        <Setter Property="Foreground" Value="{StaticResource Input_Fg}" />
        <Setter Property="Background" Value="{StaticResource Input_Bg}" />
        <Setter Property="BorderBrush" Value="{StaticResource Input_Border}" />
        <Setter Property="BorderThickness" Value="{StaticResource Input_BorderThickness}" />
        <Setter Property="Padding" Value="{StaticResource Input_Padding}" />
        <Setter Property="CaretBrush" Value="{StaticResource Input_Fg}" />
        <Setter Property="SelectionBrush" Value="{StaticResource Input_SelectionBg}" />
        <Setter Property="SelectionTextBrush" Value="{StaticResource Input_SelectionFg}" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="MinHeight" Value="34" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Grid>
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{StaticResource Input_CornerRadius}">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="0"
                                          Padding="{TemplateBinding Padding}"
                                          Focusable="False"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource Input_BgHover}" />
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Input_BorderHover}" />
                        </Trigger>

                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource Input_BgFocus}" />
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Input_BorderFocus}" />
                            <Setter TargetName="Bd" Property="BorderThickness" Value="2" />
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bd" Property="Opacity" Value="0.55" />
                            <Setter Property="Foreground" Value="{StaticResource Input_FgDisabled}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Optional: globaler Default für alle TextBox -->
    <!-- <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource LumiTextBox}" /> -->


    <!-- =========================
         PasswordBox (WPF hat kein Placeholder nativ)
         ========================= -->
    <Style x:Key="LumiPasswordBox" TargetType="{x:Type PasswordBox}">
        <Setter Property="Foreground" Value="{StaticResource Input_Fg}" />
        <Setter Property="Background" Value="{StaticResource Input_Bg}" />
        <Setter Property="BorderBrush" Value="{StaticResource Input_Border}" />
        <Setter Property="BorderThickness" Value="{StaticResource Input_BorderThickness}" />
        <Setter Property="Padding" Value="{StaticResource Input_Padding}" />
        <Setter Property="CaretBrush" Value="{StaticResource Input_Fg}" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="MinHeight" Value="34" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type PasswordBox}">
                    <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource Input_CornerRadius}">
                        <ScrollViewer x:Name="PART_ContentHost"
                                      Margin="0"
                                      Padding="{TemplateBinding Padding}"
                                      Focusable="False"
                                      HorizontalScrollBarVisibility="Hidden"
                                      VerticalScrollBarVisibility="Hidden"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource Input_BgHover}" />
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Input_BorderHover}" />
                        </Trigger>

                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource Input_BgFocus}" />
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Input_BorderFocus}" />
                            <Setter TargetName="Bd" Property="BorderThickness" Value="2" />
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bd" Property="Opacity" Value="0.55" />
                            <Setter Property="Foreground" Value="{StaticResource Input_FgDisabled}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- =========================
     CheckBox
     ========================= -->
    <Style x:Key="LumiCheckBox" TargetType="{x:Type CheckBox}">
        <Setter Property="Foreground" Value="{StaticResource Input_Fg}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CheckBox}">
                    <Grid VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Box + Checkmark (zentriert) -->
                        <Border x:Name="Box"
        Width="18"
        Height="18"
        CornerRadius="4"
        Background="{StaticResource Input_Bg}"
        BorderBrush="{StaticResource Input_Border}"
        BorderThickness="1"
        VerticalAlignment="Center">
                            <Grid>
                                <Viewbox x:Name="CheckHost"
                                         Width="12"
                                         Height="12"
                                         Stretch="Uniform"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         Visibility="Collapsed">
                                    <Path Stroke="{StaticResource Input_SelectionBg}"
                                          StrokeThickness="2"
                                          StrokeStartLineCap="Round"
                                          StrokeEndLineCap="Round"
                                          StrokeLineJoin="Round"
                                          Data="M 1 6 L 5 10 L 11 2" />
                                </Viewbox>
                            </Grid>
                        </Border>

                    </Grid>

                    <ControlTemplate.Triggers>

                        <!-- Checked -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Box" Property="Background" Value="{StaticResource Input_BgFocus}" />
                            <Setter TargetName="Box" Property="BorderBrush" Value="{StaticResource Input_BorderFocus}" />
                            <Setter TargetName="CheckHost" Property="Visibility" Value="Visible"/>
                        </Trigger>

                        <!-- Hover -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Box" Property="BorderBrush" Value="{StaticResource Input_BorderHover}" />
                            <Setter TargetName="Box" Property="Background" Value="{StaticResource Input_BgHover}" />
                        </Trigger>

                        <!-- Disabled -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Box" Property="Opacity" Value="0.5"/>
                            <Setter Property="Foreground" Value="{StaticResource Input_FgDisabled}" />
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
