<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:infra="clr-namespace:Lumi.Infrastructure">

    <!--
        WICHTIG:
        - KEIN MergedDictionaries hier
        - Icons kommen aus App.xaml
    -->

    <Style x:Key="SquareButtonStyle_V2" TargetType="Button">
        <!-- Basis -->
        <Setter Property="Background" Value="#2D2D2D"/>
        <Setter Property="BorderBrush" Value="#3A3A3A"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="0"/>

        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Stretch"/>

        <!-- Default Icon -->
        <Setter Property="infra:IconButton.IconData" Value="{StaticResource tdesign_add}"/>

        <!-- Farben -->
        <Setter Property="infra:IconButton.IconFill" Value="#2FBF55"/>
        <Setter Property="infra:IconButton.IconFillHover" Value="#45D96B"/>
        <Setter Property="infra:IconButton.IconFillPressed" Value="#1B7A34"/>

        <!-- Outline Thickness (skaliert mit, weil Viewbox) -->
        <Setter Property="infra:IconButton.IconStrokeThickness" Value="2"/>

        <!-- Template -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="2">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- ICON -->
                            <Viewbox Grid.Row="0"
                                     Margin="5,5,5,0"
                                     Stretch="Uniform"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center">
                                <Grid Width="24" Height="24">
                                    <Path x:Name="IconPath"
                                          Data="{Binding RelativeSource={RelativeSource TemplatedParent},
                                                         Path=(infra:IconButton.IconData)}"
                                          Fill="Transparent"
                                          Stroke="{Binding RelativeSource={RelativeSource TemplatedParent},
                                                           Path=(infra:IconButton.IconFill)}"
                                          StrokeThickness="{Binding RelativeSource={RelativeSource TemplatedParent},
                                                                   Path=(infra:IconButton.IconStrokeThickness)}"
                                          StrokeStartLineCap="Round"
                                          StrokeEndLineCap="Round"
                                          StrokeLineJoin="Round"/>
                                </Grid>
                            </Viewbox>

                            <!-- LABEL (aus Content) -->
                            <ContentPresenter x:Name="LabelPresenter"
                                              Grid.Row="1"
                                              Margin="6,2,6,6"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True">

                                <ContentPresenter.ContentTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   Foreground="#E8DCC3"
                                                   FontSize="10"
                                                   TextTrimming="CharacterEllipsis"
                                                   TextAlignment="Center"/>
                                    </DataTemplate>
                                </ContentPresenter.ContentTemplate>
                            </ContentPresenter>
                        </Grid>
                    </Border>

                    <!-- States -->
                    <ControlTemplate.Triggers>
                        <!-- Label verstecken, wenn Content leer oder null -->
                        <Trigger Property="Content" Value="{x:Null}">
                            <Setter TargetName="LabelPresenter" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                        <Trigger Property="Content" Value="">
                            <Setter TargetName="LabelPresenter" Property="Visibility" Value="Collapsed"/>
                        </Trigger>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="IconPath"
                    Property="Stroke"
                    Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(infra:IconButton.IconFillHover)}"/>
                        </Trigger>

                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="IconPath"
                    Property="Stroke"
                    Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(infra:IconButton.IconFillPressed)}"/>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="IconPath"
                    Property="Opacity"
                    Value="0.4"/>
                            <Setter TargetName="LabelPresenter"
                    Property="Opacity"
                    Value="0.4"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>

            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
