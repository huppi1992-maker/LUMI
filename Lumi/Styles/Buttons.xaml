<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:infra="clr-namespace:Lumi.Infrastructure">

    <!--
        WICHTIG:
        - KEIN MergedDictionaries hier
        - Icons kommen aus App.xaml
    -->

    <Style x:Key="SquareButtonStyle_V2" TargetType="Button">
        <!-- Basis -->
        <Setter Property="Background" Value="#2D2D2D"/>
        <Setter Property="BorderBrush" Value="#3A3A3A"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="0"/>

        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Stretch"/>

        <!-- Default Icon -->
        <Setter Property="infra:IconButton.IconData" Value="{StaticResource tdesign_add}"/>

        <!-- Farben -->
        <Setter Property="infra:IconButton.IconFill" Value="#2FBF55"/>
        <Setter Property="infra:IconButton.IconFillHover" Value="#45D96B"/>
        <Setter Property="infra:IconButton.IconFillPressed" Value="#1B7A34"/>

        <!-- Outline Thickness (skaliert mit, weil Viewbox) -->
        <Setter Property="infra:IconButton.IconStrokeThickness" Value="2"/>

        <!-- Template -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="2">

                        <Grid>
                            <!-- ICON: skaliert auf verfügbare Fläche -->
                            <Viewbox Margin="5"
                                     Stretch="Uniform"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center">
                                <!-- Referenz-Koordinatenraum -->
                                <Grid Width="24" Height="24">
                                    <Path x:Name="IconPath"
                                          Data="{Binding RelativeSource={RelativeSource TemplatedParent},
                                                         Path=(infra:IconButton.IconData)}"
                                          Fill="Transparent"
                                          Stroke="{Binding RelativeSource={RelativeSource TemplatedParent},
                                                           Path=(infra:IconButton.IconFill)}"
                                          StrokeThickness="{Binding RelativeSource={RelativeSource TemplatedParent},
                                                                   Path=(infra:IconButton.IconStrokeThickness)}"
                                          StrokeStartLineCap="Round"
                                          StrokeEndLineCap="Round"
                                          StrokeLineJoin="Round"/>
                                </Grid>
                            </Viewbox>

                            <!-- Optionaler Content später -->
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Visibility="Collapsed" />
                        </Grid>
                    </Border>

                    <!-- States -->
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="IconPath"
                                    Property="Stroke"
                                    Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(infra:IconButton.IconFillHover)}"/>
                        </Trigger>

                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="IconPath"
                                    Property="Stroke"
                                    Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(infra:IconButton.IconFillPressed)}"/>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="IconPath"
                                    Property="Opacity"
                                    Value="0.4"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
